# Flask
FLASK_ENV=production
SECRET_KEY=change-me-to-a-long-random-string

# MongoDB (recommended for production)
# Paste your MongoDB Atlas connection string here.
# Example:
# MONGODB_URI=mongodb+srv://USER:PASS@CLUSTER.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=
MONGODB_DB=letstravel_db

# Cookie/session settings
SESSION_DAYS=7
SESSION_COOKIE_SECURE=1
SESSION_COOKIE_SAMESITE=Lax
PREFERRED_URL_SCHEME=https

# Cohere (Personalized Itineraries)
# Set this in your hosting provider's environment variables.
COHERE_API_KEY=
# Optional overrides:
# - API URL defaults to Cohere Chat v2 endpoint if empty.
# - Model defaults to a reasonable chat model if empty.
COHERE_API_URL=https://api.cohere.com/v2/chat
COHERE_MODEL=command-a-03-2025
